<UserControl
    x:Class="golddrive.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:golddrive"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">

    <StackPanel>
        <StackPanel
            Grid.Row="1"
            Orientation="Horizontal"
            VerticalAlignment="Top">
            <Button
                Content="New"
                Margin="2"
                Width="90"
                IsEnabled="{Binding IsDriveNew , Converter={local:NegateBoolConverter }}"
                Style="{StaticResource MaterialDesignFlatButton}"
                Command="{Binding SettingsNewCommand}" />
            <Button
                Content="Delete"
                Margin="2"
                Width="90"
                IsEnabled="{Binding IsDriveNew , Converter={local:NegateBoolConverter }}"
                Style="{StaticResource MaterialDesignFlatButton}"
                Command="{Binding SettingsDeleteCommand}" />

        </StackPanel>
        <Rectangle
            Grid.Row="2"
            Height="1"
            HorizontalAlignment="Stretch"
            Fill="{DynamicResource PrimaryHueMidBrush}" />
        <StackPanel
            Grid.Row="3">
            <StackPanel
                Visibility="{Binding IsDriveNew, Converter={local:BoolToVis}}">
                <ComboBox
                    ItemsSource="{Binding FreeDrives}"
                    SelectedItem="{Binding SelectedFreeDrive}"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                    materialDesign:HintAssist.Hint="Drive"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    DisplayMemberPath="ComboDisplay"
                    FontSize="24" />
                <TextBox
                    Text="{Binding SelectedFreeDrive.MountPoint}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Mount Point"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    FontSize="24" />
                <TextBox
                    Text="{Binding SelectedFreeDrive.Label}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Label"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    FontSize="24" />
            </StackPanel>
            <StackPanel
                Visibility="{Binding IsDriveNew, Converter={local:BoolToVis Negate=True}}">
                <ComboBox
                    ItemsSource="{Binding Drives}"
                    SelectedItem="{Binding SelectedDrive}"
                    DisplayMemberPath="ComboDisplay"
                    materialDesign:HintAssist.Hint="Drive"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                    FontSize="24">
                </ComboBox>
                <TextBox
                    Text="{Binding SelectedDrive.MountPoint}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Mount Point"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    FontSize="24" />
                <TextBox
                    Text="{Binding SelectedDrive.Label}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Label"
                    materialDesign:HintAssist.FloatingScale="0.50"
                    FontSize="24" />
            </StackPanel>
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                Content="Cancel"
                Visibility="{Binding IsDriveNew, Converter={local:BoolToVis}}"
                Command="{Binding SettingsCancelCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                Width="90"
                HorizontalAlignment="Right" />
            <Button
                Content="Ok"
                Command="{Binding SettingsSaveCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                Width="90"
                HorizontalAlignment="Right" />
        </StackPanel>
    </StackPanel>
</UserControl>
