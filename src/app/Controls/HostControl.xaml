<UserControl
    x:Class="golddrive.HostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:golddrive"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <StackPanel
        IsEnabled="{Binding IsWorking, Converter={local:NegateBoolConverter}}"
        Margin="50 0">
        <TextBlock
            Text="Drive"
            Style="{StaticResource Title}" />
        <ComboBox
            Visibility="{Binding HasDrive, Converter={local:BoolToVis Negate=True}}"
            ItemsSource="{Binding FreeDrives}"
            SelectedItem="{Binding SelectedFreeDrive}"
            DisplayMemberPath="ComboDisplay"
            materialDesign:HintAssist.Hint="Drive"
            VerticalAlignment="Bottom"
            Margin="0,0,0,30"
            FontSize="20" />
        <ComboBox
            Visibility="{Binding HasDrive, Converter={local:BoolToVis}}"
            ItemsSource="{Binding GoldDrives}"
            SelectedItem="{Binding SelectedDrive}"
            DisplayMemberPath="ComboDisplay"
            materialDesign:HintAssist.Hint="Drive"
            VerticalAlignment="Bottom"
            Margin="0,0,0,30"
            FontSize="20" />
        <TextBlock
            Text="Mount Point"
            Style="{StaticResource Title}" />
        <TextBox
            Text="{Binding NewMountPoint}"
            materialDesign:HintAssist.Hint="Host or user@host!22"
            local:EnterKeyHelper.EnterKeyCommand="{Binding ConnectHostCommand}"
            Margin="0,0,0,30"
            FontSize="20" />

        <StackPanel
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <Button
                Content="Cancel"
                Command="{Binding ShowPageCommand}"
                CommandParameter="{x:Static local:Page.Main}"
                Style="{StaticResource MaterialDesignFlatButton}"
                Margin="5 0" 
                Width="80" />
            <Button
                Content="Connect"
                Command="{Binding ConnectHostCommand}"
                Width="90" />
        </StackPanel>
        <TextBlock
            TextWrapping="Wrap"
            Text="{Binding Message}"
            Foreground="{Binding MessageColor}"
            VerticalAlignment="Top"
            Margin="0 30"/>
    </StackPanel>
</UserControl>
